
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/cssTransPort.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<h2>Usuarios</h2>

<div id="tabla">

</div>

<!-- Lanzar modal con el boton -->
<button onclick="abrirModal(0)" type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Agregar Nuevo</button>
<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Roles</h4>
            </div>
            <div class="modal-body">
                <table style="width:80%;margin:auto">
                    <tr>
                        <td width="40%">ID Usuario</td>
                        <td width="100%"><input class="borrar" type="text" id="txtIDusuario" readonly /></td>
                    </tr>
                    <tr>
                        <td>Nombre Usuario</td>
                        <td><input class="borrar obligatorio" type="text" id="txtNombre" /></td>
                    </tr>
                    <tr>
                        <td id="lblContraseña">Contraseña</td>
                        <td><input class="borrar obligatorio" type="password" id="txtContraseña" /></td>
                    </tr>
                    <tr>
                        <td id="lblPersona">Persona</td>
                        <td><select class="borrar obligatorio" id="cboPersona"></select></td>
                    </tr>
                    <tr>
                        <td>Rol</td>
                        <td><select class="borrar obligatorio" id="cboRol"></select></td>
                    </tr>
                </table>
                <table id="tblPagina"></table>
            </div>
            <div class="modal-footer">
                <button onclick="Agregar()" type="button" class="btn btn-primary">Aceptar</button>
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/Usuario.js"></script>
<script src="~/Scripts/datatables.min.js"></script>
